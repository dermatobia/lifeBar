<div class="container">

  <% if @user.errors.any? %>
    <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li class="error"><%= error %></li>
    <% end %>
    </ul>
  <% end %>
  <%= form_for(@user) do |f| %>
    <h2>Sign up</h2>

      <%= f.label(:email, "Email:") %>
      <%= f.text_field(:email) %><br><br>

      <%= f.label(:password, "Password:") %>
      <%= f.password_field(:password) %><br><br>

      <%= f.label(:password_confirmation, "Confirm password:") %>
      <%= f.password_field(:password_confirmation) %><br><br><br>

      <%= date_select("birthday", use_month_numbers: true) %>

    <%= f.submit("Sign up") %>
  <% end %>
</div>
